<div class="form-inputs" data-controller="maps-autocomplete">
  <%= simple_form_for(@user, url: wizard_path, method: :put) do |f| %>
    <%= f.input :address, input_html: {data: { maps_autocomplete_target: "address"  } } %>
    <%= f.input :country, input_html: { data: { maps_autocomplete_target: "country" } } %>
    <%= f.input :city, input_html: { data: { maps_autocomplete_target: "region" } } %>
    <%= f.input :photos, as: :text, placeholder: 'photos' %>
    <%= f.button :submit, 'Valider', class: 'btn btn-primary' %>
  <% end %>
</div>
